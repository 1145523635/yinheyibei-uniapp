{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "图鸟UI"
			}
		}
	],
	"subPackages": [
		{
			"root": "demo-pages",
			"pages": [
        {
          "path": "basic/flex/index",
          "style": {
            "navigationBarTitleText": "Flex布局"
          }
        },
        {
          "path": "basic/color/index",
          "style": {
            "navigationBarTitleText": "Color配色"
          }
        },
        {
          "path": "basic/icon/index",
          "style": {
            "navigationBarTitleText": "Icon图标"
          }
        }
      ]
		}
	],
	"preloadRule": {
		"pages/index/index": {
			"network": "all",
			"packages": ["demo-pages"]
		}
	},
	"globalStyle": {
		"navigationStyle": "custom",
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "图鸟UI-v3演示",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
